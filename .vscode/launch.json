{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "test.file",
      "runtimeExecutable": "${env:NVM_BIN}/node",
      "runtimeArgs": [
        "--trace-uncaught",
        "--inspect-brk",
        "--trace-warnings",
        "${workspaceFolder}/node_modules/.bin/jest",
        "${fileBasenameNoExtension}",
        "--detectOpenHandles"
      ],
      "port": 9229,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "test.all",
      "runtimeExecutable": "${env:NVM_BIN}/node",
      "runtimeArgs": [
        "--inspect-brk",
        "--trace-warnings",
        "${workspaceFolder}/node_modules/.bin/jest"
      ],
      "port": 9229,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}