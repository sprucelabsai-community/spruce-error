{
    "name": "@sprucelabs/error",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "build"
    ],
    "version": "3.0.0",
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "description": "Error reporting that's really, really helpful. ðŸ’¡",
    "keywords": [
        "node",
        "components",
        "sprucebot",
        "sprucelabs"
    ],
    "homepage": "https://github.com/sprucelabsai/spruce-error",
    "bugs": {
        "url": "https://github.com/sprucelabsai/spruce-error/issues"
    },
    "scripts": {
        "build": "yarn clean && yarn build.umd && yarn build.tsc",
        "build.tsc": "tsc",
        "build.types": "tsc --emitDeclarationOnly && echo PASS",
        "build.browser": "tsc --project tsconfig.browser.json",
        "build.umd": "rollup -c rollup.config.js && mkdir -p build/umd && cd build && sed s/index.js.map/error.js.map/ index.js > umd/error.js && mv index.js.map umd/error.js.map",
        "build.watch": "concurrently 'yarn build -w' \"chokidar 'index.ts' 'src/**/*.(js|jsx|ts|tsx)' -c 'yarn build.umd'\"",
        "clean": "rm -rf build/",
        "lint": "eslint '**/*.ts' && tsc -p . --noEmit",
        "lint.fix": "eslint --fix '**/*.ts'",
        "test": "jest",
        "test.watch": "jest --watch",
        "release": "semantic-release",
        "arkit": "arkit -f index.ts -o docs/images/arkit.svg",
        "arkit.png": "arkit -f index.ts -o docs/images/arkit.png",
        "upgrade.packages": "yarn upgrade --latest && rm yarn.lock | true && yarn | true && yarn lint.fix | true",
        "upgrade.packages.all": "yarn install && yarn upgrade.packages",
        "upgrade.packages.test": "yarn upgrade.packages.all && yarn lint && yarn build && yarn test"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^16.0.0",
        "@rollup/plugin-json": "^4.0.1",
        "@rollup/plugin-node-resolve": "^10.0.0",
        "@rollup/plugin-typescript": "^6.0.0",
        "@sprucelabs/semantic-release": "^4.0.6",
        "@sprucelabs/test": "^7.1.3",
        "@types/faker": "^5.1.2",
        "arkit": "^1.6.4",
        "chokidar-cli": "^2.1.0",
        "concurrently": "^5.3.0",
        "eslint": "^7.11.0",
        "eslint-config-spruce": "^10.9.91",
        "jest": "^26.5.3",
        "prettier": "^2.1.2",
        "rollup": "^2.29.0",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-node-globals": "^1.4.0",
        "rollup-plugin-replace": "^2.2.0",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "peerDependencies": {},
    "dependencies": {},
    "jest": {
        "maxWorkers": 4,
        "testTimeout": 120000,
        "testEnvironment": "node",
        "testPathIgnorePatterns": [
            "<rootDir>/tmp/",
            "<rootDir>/src/",
            "<rootDir>/node_modules/",
            "<rootDir>/build/__tests__/testDirsAndFiles/"
        ],
        "testMatch": [
            "**/__tests__/**/*.test.js?(x)"
        ],
        "moduleNameMapper": {
            "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
        }
    }
}
